{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "es6",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "isolatedModules": false,
        "paths": {
            "components/*": ["src/components/*"],
            "root/*": ["src/root/*"],
            "containers/*": ["src/containers/*"],
            "entities/*": ["src/entities/*"],
            "libs/*": ["src/libs/*"],
            "theme/*": ["src/theme/*"],
            "routes/*": ["src/routes/*"],
            "widgets/*": ["src/widgets/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importsNotUsedAsValues": "preserve",
        "incremental": true
    },
    "typeRoots": ["src/@types"],
    "include": ["src/**/*", "src"],
    "exclude": ["**/node_modules", "**/.*/"]
}
